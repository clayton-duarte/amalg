{
  "name": "next-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/next-auth/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/next-auth"
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs next-auth {args.ver} {args.tag}",
      "dependsOn": ["build"]
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["coverage/libs/next-auth"],
      "options": {
        "passWithNoTests": true,
        "reportsDirectory": "../../coverage/libs/next-auth"
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["libs/next-auth/**/*.ts"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "postTargets": ["next-auth:deploy"],
        "preset": "conventional"
      }
    },
    "deploy": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "buildTarget": "production",
        "access": "public"
      }
    }
  },
  "tags": []
}
